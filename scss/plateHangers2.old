@import "variables";
@import "footer";

.hardware-container {
    // padding-left: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;

    /*  .heading {
        @include font2;
        text-align: center;
        width: 90%;
      }*/

    .big-heading {
        @include font1;
        text-align: center;
        width: 90%;
    }

    .plate-holders,
    .plate-hangers {
        // border: 3px solid red;
        display: grid;
        // grid-column-gap: 25px;
        width: 80%;
        text-align: center;
        /*margin: 0 auto;*/

        .heading {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            @include font2;
        }
        .copy1,
        .copy2 {
            text-align: left;
            font-size: 14px;
            display: block;
            // float: left;
            padding: 20px;
            // padding: 10px 20px 10px 20px;
            @include font7;
            .bold {
                font-weight: bold;
            }
            .red-words {
                @include font17;
                font-weight: bold;
            }
            .item-name {
                @include font14;
                font-weight: bold;
            }
            @include max-mixin(500px) {
                width: 100%;
                // padding-left: 0;
            }
        }

        // @include max-mixin(700px) {
        //     display: block;
        // }
        background-color: #ededed;

        .box {
            background-color: #ededed;
            color: black;
            /*border: 3px solid red;*/
            /*height: 100px;*/
            width: 80%;
            height: auto;
            .item-name {
                @include font14;
            }
            .paragraph {
                @include font7;
                .red-words {
                    @include font17;
                }
            }
            .order {
                @include font9;
                font-weight: bold;
            }
            .item-name {
                @include font14;
                font-weight: bold;
            }
            form {
                justify-self: end;
                text-align: left;
                color: black;
                // font-size: 10px;
                @include max-mixin(360px) {
                    font-size: 16px;
                }
            }
        }
    }

    /******************************************
      plate-holders
    *******************************************/
    $breakpt1: 0; // 1100px;

    .plate-holders {
        /*border: 3px solid red;*/
        width: 80%;
        @include max-mixin(550px) {
            width: 100%;
        }
        // min-height: 550px;
        /*height: 525px;*/
        /*grid-template: repeat(4, 90px)  / 55% 1fr 1fr 1fr 1fr 1fr;*/
