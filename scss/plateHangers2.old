        //     "text text text text "
        //     "plates cart cart cart "
        //     "plates cart cart cart "
        //     "plates cart cart cart "
        //     "heart ram scroll blank";
        grid-template-columns: repeat(5, 20%);

        .a {
            /*height: 400px;*/
            // grid-area: plates;
            width: 70vw;
            grid-row: 2 / span 3;
            grid-column: 1 / span 3;
            align-self: center;
            img {
                width: 100%;
                height: auto;
            }
        }
        .b {
            /*border: 3px  solid red;*/
            // grid-area: text;
            grid-row: 1 / span 1;
            grid-column: 1 / span 4;
            @include max-mixin($breakpt1) {
                grid-column: 1 / span 3;
            }
            font-size: 14px;
            text-align: center;
            padding-top: 40px;
            // padding-left: 20px;
            img {
                z-index: 10;
            }
            @include max-mixin(500px) {
                padding-left: 0;
            }
            .p {
                /*border: 3px  solid red;*/
                // padding-left: 20px;
            }
        }
        .c,
        .d,
        .e {
            // border: 3px  solid red;
            justify-items: start;
            display: inline-block;
            align-self: center;
            justify-items: left;
            height: 50px;
            width: 80px;
            @include max-mixin(400px) {
                width: 50px;
            }
            img {
                width: 60%;
                height: 60%;
                // @include max-mixin($breakpt1) {
                //     width: 10%;
                //     height: 10%;
                // }
            }
        }
        .g {
            // border: 3px solid red;
            padding-left: 25px;
            z-index: 10;
            padding-right: 15px;
            margin: 15px;
            grid-row: 5 / span 1;
            grid-column: 1 / span 1;
            align-self: center;
            width: 100px;
        }
        .f {
            // border: 3px  solid red;
            padding-left: 15px;
            // grid-area: cart;
            padding-left: 50px;
            grid-row: 5 / span 1;
            grid-column: 3 / span 3;
            width: auto;
            text-align: left;
            // @include font7;
            @include max-mixin(360px) {
                font-size: 16px;
            }
            table {
                /*border: 1px solid black;*/
                tr {
                    td {
                        /*border: 1px solid black;*/
                    }
                }
            }
        }
    }

    /******************************************
     one-plate-hanger
    *******************************************/
    .plate-hangers {
        @include max-mixin(500px) {
            width: 100%;
        }
        display: grid;
        grid-row-gap: 10px;
        padding-top: 25px;

        .heading {
            grid-row: 1 / span 1;
            grid-column: 1 / span 3;
        }
        .copy1 {
            grid-row: 2 / span 1;
            grid-column: 1 / span 3;
        }

        .picture {
            grid-row: 3 / span 2;
            grid-column: 1 / span 2;
        }
        .picture2 {
            grid-row: 3 / span 2;
            grid-column: 3 / span 1;
            @include max-mixin(500px) {
                grid-row: 5 / span 2;
                grid-column: 1 / span 2;
                }
        }
        // .pictures {
        //     display: flex;
        //     justify-content: space-around;
        //     @include max-mixin(550px) {
        //         flex-direction: column;
        //     }
        // }

        .heart,
        .ram,
        .scroll,
        .spade {
            // border: 3px  solid red;
            justify-items: start;
            display: inline-block;
            align-self: center;
            justify-items: left;
            height: 60px;
            width: 80px;
            @include max-mixin(400px) {
                width: 50px;
            }
            img {
                width: 60%;
                height: 60%;
                // @include max-mixin($breakpt1) {
                //     width: 10%;
                //     height: 10%;
                // }
            }
            padding-bottom: 25px;
        }
        .models {
            // border: 3px solid red;
            // padding-left: 25px;
            z-index: 10;
            // padding-right: 15px;
            // margin: 15px;
            grid-row: 3 / span 1;
            grid-column: 3 / span 2;
            align-self: center;
            width: 100%;
            height: auto;
            color: red;
            display: flex;
            flex-direction: column;
            @include max-mixin(500px) {
                grid-row: 5 / span 1;
                grid-column: 1 / span 2;
                flex-direction: row;
            }
        }
        .copy2 {
            grid-row: 5 / span 1;
            grid-column: 1 / span 3;
        }

        .buy-it {
            // border: 3px solid red;
            padding-left: 15px;
            // grid-area: cart;
            padding-left: 50px;
            grid-row: 6 / span 1;
            grid-column: 1 / span 4;
            width: auto;
            text-align: center;
            justify-self: center;
            @include max-mixin(500px) {
                grid-row: 7 / span 1;
                justify-self: left;
            }
            width: 30vw;
            height: auto;
            // @include font7;
            @include max-mixin(360px) {
                font-size: 16px;
            }
            table {
                /*border: 1px solid black;*/
                tr {
                    td {
                        /*border: 1px solid black;*/
                    }
                }
            }
        }
        padding-bottom: 25px;
    }

